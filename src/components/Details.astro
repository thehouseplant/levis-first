---
interface Props {
  date?: string;
  time?: string;
  venue?: string;
  address?: string;
}

const {
  date = "Saturday, April 25, 2026",
  time = "1:00 PM",
  venue = "Faylane Park",
  address = "11700 Seacrest Dr, Garden Grove, CA 92840",
} = Astro.props;
---

<section class="details-section" id="details">
  <div class="details-wrapper">
    <h2 class="section-title">Party Details</h2>

    <div class="details-grid">
      <div class="detail-card">
        <div class="card-icon">
          <svg viewBox="0 0 24 24" width="32" height="32" fill="none" stroke="var(--blue)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <rect x="3" y="4" width="18" height="18" rx="2" ry="2" />
            <line x1="16" y1="2" x2="16" y2="6" />
            <line x1="8" y1="2" x2="8" y2="6" />
            <line x1="3" y1="10" x2="21" y2="10" />
          </svg>
        </div>
        <h3 class="card-label">When</h3>
        <p class="card-value">{date}</p>
        <p class="card-sub">{time}</p>
      </div>

      <div class="detail-card">
        <div class="card-icon">
          <svg viewBox="0 0 24 24" width="32" height="32" fill="none" stroke="var(--green)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z" />
            <circle cx="12" cy="10" r="3" />
          </svg>
        </div>
        <h3 class="card-label">Where</h3>
        <p class="card-value">{venue}</p>
        <p class="card-sub">{address}</p>
      </div>
    </div>
  </div>
</section>

<style>
  .details-section {
    padding: 5rem 1.5rem;
    background: var(--cream);
  }

  .details-wrapper {
    max-width: 650px;
    margin: 0 auto;
  }

  .section-title {
    font-size: clamp(1.8rem, 5vw, 2.5rem);
    font-weight: 800;
    color: var(--navy);
    text-align: center;
    margin-bottom: 2.5rem;
  }

  .details-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
  }

  .detail-card {
    background: white;
    border-radius: 20px;
    padding: 2rem 1.5rem;
    text-align: center;
    box-shadow: 0 2px 12px rgba(42, 127, 255, 0.06);
    border: 2px solid var(--blue-light);
    transition: transform 0.3s ease, box-shadow 0.3s ease, border-color 0.3s ease;
  }

  .detail-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 25px rgba(42, 127, 255, 0.12);
    border-color: var(--blue);
  }

  .card-icon { margin-bottom: 1rem; }

  .card-label {
    font-family: var(--font-display);
    font-size: 1.1rem;
    font-weight: 700;
    color: var(--blue-dark);
    margin-bottom: 0.5rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .card-value {
    font-size: 1rem;
    font-weight: 500;
    color: var(--navy);
    line-height: 1.5;
  }

  .card-sub {
    font-size: 0.9rem;
    color: var(--navy);
    opacity: 0.6;
    margin-top: 0.25rem;
  }
</style>
