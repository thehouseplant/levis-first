---
interface Props {
  date?: string;
  time?: string;
  venue?: string;
  address?: string;
  dressCode?: string;
  rsvpEmail?: string;
}

const {
  date = "Saturday, April 25, 2026",
  time = "1:00 PM",
  venue = "Faylane Park",
  address = "11700 Seacrest Dr, Garden Grove, CA 92840",
  dressCode = "Colorful & casual â€” the more fun, the better!",
  rsvpEmail = "family@example.com",
} = Astro.props;
---

<section class="details-section" id="details">
  <div class="details-wrapper">
    <h2 class="section-title">Party Details</h2>

    <div class="details-grid">
      <div class="detail-card">
        <div class="card-icon">
          <svg viewBox="0 0 24 24" width="32" height="32" fill="none" stroke="var(--blue)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <rect x="3" y="4" width="18" height="18" rx="2" ry="2" />
            <line x1="16" y1="2" x2="16" y2="6" />
            <line x1="8" y1="2" x2="8" y2="6" />
            <line x1="3" y1="10" x2="21" y2="10" />
          </svg>
        </div>
        <h3 class="card-label">When</h3>
        <p class="card-value">{date}</p>
        <p class="card-sub">{time}</p>
      </div>

      <div class="detail-card">
        <div class="card-icon">
          <svg viewBox="0 0 24 24" width="32" height="32" fill="none" stroke="var(--green)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z" />
            <circle cx="12" cy="10" r="3" />
          </svg>
        </div>
        <h3 class="card-label">Where</h3>
        <p class="card-value">{venue}</p>
        <p class="card-sub">{address}</p>
      </div>

      <div class="detail-card">
        <div class="card-icon">
          <svg viewBox="0 0 24 24" width="32" height="32" fill="none" stroke="var(--orange)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="12" cy="8" r="5" />
            <path d="M3 21v-2a7 7 0 0 1 7-7h4a7 7 0 0 1 7 7v2" />
          </svg>
        </div>
        <h3 class="card-label">Dress Code</h3>
        <p class="card-value">{dressCode}</p>
      </div>

      <div class="detail-card">
        <div class="card-icon">
          <svg viewBox="0 0 24 24" width="32" height="32" fill="none" stroke="var(--red)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z" />
            <polyline points="22,6 12,13 2,6" />
          </svg>
        </div>
        <h3 class="card-label">RSVP</h3>
        <p class="card-value">Let us know you're coming!</p>
        <a href={`mailto:${rsvpEmail}?subject=Birthday RSVP`} class="rsvp-link">
          {rsvpEmail}
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .details-section {
    padding: 5rem 1.5rem;
    background: var(--cream);
    position: relative;
  }

  .details-wrapper {
    max-width: 800px;
    margin: 0 auto;
  }

  .section-title {
    font-size: clamp(1.8rem, 5vw, 2.5rem);
    font-weight: 800;
    color: var(--navy);
    text-align: center;
    margin-bottom: 2.5rem;
  }

  .details-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: 1.5rem;
  }

  .detail-card {
    background: white;
    border-radius: 20px;
    padding: 2rem 1.5rem;
    text-align: center;
    box-shadow: 0 2px 12px rgba(42, 127, 255, 0.06);
    border: 2px solid var(--blue-light);
    transition: transform 0.3s ease, box-shadow 0.3s ease, border-color 0.3s ease;
  }

  .detail-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 25px rgba(42, 127, 255, 0.12);
    border-color: var(--blue);
  }

  .card-icon {
    margin-bottom: 1rem;
  }

  .card-label {
    font-family: var(--font-display);
    font-size: 1.1rem;
    font-weight: 700;
    color: var(--blue-dark);
    margin-bottom: 0.5rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .card-value {
    font-size: 1rem;
    font-weight: 500;
    color: var(--navy);
    line-height: 1.5;
  }

  .card-sub {
    font-size: 0.9rem;
    color: var(--navy);
    opacity: 0.6;
    margin-top: 0.25rem;
  }

  .rsvp-link {
    display: inline-block;
    margin-top: 0.5rem;
    font-weight: 600;
    color: var(--blue);
    border-bottom: 2px solid transparent;
    transition: border-color 0.2s;
  }

  .rsvp-link:hover {
    border-bottom-color: var(--blue);
  }
</style>
