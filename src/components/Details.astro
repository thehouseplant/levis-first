---
interface Props {
  date?: string;
  time?: string;
  venue?: string;
  address?: string;
  wishListUrl?: string;
  wishListItems?: string[];
}

const {
  date = "Saturday, April 25, 2026",
  time = "1:00 PM",
  venue = "Faylane Park",
  address = "11700 Seacrest Dr, Garden Grove, CA 92840",
  wishListUrl = "",
  wishListItems = [
    "Books for little readers",
    "Outdoor toys & bubbles",
    "Building blocks & stacking toys",
    "Gift cards",
  ],
} = Astro.props;
---

<section class="details-section" id="details">
  <div class="details-wrapper">
    <h2 class="section-title">Party Details</h2>

    <div class="details-grid">
      <div class="detail-card">
        <div class="card-icon">
          <svg viewBox="0 0 24 24" width="32" height="32" fill="none" stroke="var(--blue)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <rect x="3" y="4" width="18" height="18" rx="2" ry="2" />
            <line x1="16" y1="2" x2="16" y2="6" />
            <line x1="8" y1="2" x2="8" y2="6" />
            <line x1="3" y1="10" x2="21" y2="10" />
          </svg>
        </div>
        <h3 class="card-label">When</h3>
        <p class="card-value">{date}</p>
        <p class="card-sub">{time}</p>
      </div>

      <div class="detail-card">
        <div class="card-icon">
          <svg viewBox="0 0 24 24" width="32" height="32" fill="none" stroke="var(--green)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z" />
            <circle cx="12" cy="10" r="3" />
          </svg>
        </div>
        <h3 class="card-label">Where</h3>
        <p class="card-value">{venue}</p>
        <p class="card-sub">{address}</p>
      </div>

      <div class="detail-card wish-card">
        <div class="card-icon">
          <svg viewBox="0 0 24 24" width="32" height="32" fill="none" stroke="var(--orange)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <rect x="3" y="8" width="18" height="13" rx="2" />
            <path d="M12 8V3" />
            <path d="M3 13h18" />
            <path d="M7.5 3C6 3 5 4 5 5.5S6 8 7.5 8H12" />
            <path d="M16.5 3C18 3 19 4 19 5.5S18 8 16.5 8H12" />
          </svg>
        </div>
        <h3 class="card-label">Wish List</h3>
        <p class="card-value wish-intro">If you'd like to bring a gift, here are some ideas Levi would love:</p>
        <ul class="wish-list">
          {wishListItems.map((item) => (
            <li class="wish-item">
              <svg viewBox="0 0 60 60" width="12" fill="var(--blue)" class="wish-paw" aria-hidden="true">
                <ellipse cx="30" cy="38" rx="14" ry="16" />
                <ellipse cx="16" cy="20" rx="7" ry="8" />
                <ellipse cx="44" cy="20" rx="7" ry="8" />
                <ellipse cx="22" cy="10" rx="6" ry="7" />
                <ellipse cx="38" cy="10" rx="6" ry="7" />
              </svg>
              {item}
            </li>
          ))}
        </ul>
        {wishListUrl && (
          <a href={wishListUrl} target="_blank" rel="noopener noreferrer" class="wish-link">
            View Full Wish List
            <svg viewBox="0 0 24 24" width="14" height="14" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
              <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6" />
              <polyline points="15 3 21 3 21 9" />
              <line x1="10" y1="14" x2="21" y2="3" />
            </svg>
          </a>
        )}
        <p class="wish-note">Your presence is the best gift of all!</p>
      </div>
    </div>
  </div>
</section>

<style>
  .details-section {
    padding: 5rem 1.5rem;
    background: var(--cream);
  }

  .details-wrapper {
    max-width: 750px;
    margin: 0 auto;
  }

  .section-title {
    font-size: clamp(1.8rem, 5vw, 2.5rem);
    font-weight: 800;
    color: var(--navy);
    text-align: center;
    margin-bottom: 2.5rem;
  }

  .details-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
  }

  .detail-card {
    background: white;
    border-radius: 20px;
    padding: 2rem 1.5rem;
    text-align: center;
    box-shadow: 0 2px 12px rgba(42, 127, 255, 0.06);
    border: 2px solid var(--blue-light);
    transition: transform 0.3s ease, box-shadow 0.3s ease, border-color 0.3s ease;
  }

  .detail-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 25px rgba(42, 127, 255, 0.12);
    border-color: var(--blue);
  }

  .wish-card {
    grid-column: 1 / -1;
  }

  .card-icon { margin-bottom: 1rem; }

  .card-label {
    font-family: var(--font-display);
    font-size: 1.1rem;
    font-weight: 700;
    color: var(--blue-dark);
    margin-bottom: 0.5rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .card-value {
    font-size: 1rem;
    font-weight: 500;
    color: var(--navy);
    line-height: 1.5;
  }

  .card-sub {
    font-size: 0.9rem;
    color: var(--navy);
    opacity: 0.6;
    margin-top: 0.25rem;
  }

  /* Wish list styles */
  .wish-intro {
    margin-bottom: 1rem;
    opacity: 0.75;
  }

  .wish-list {
    list-style: none;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 0.6rem 1.5rem;
    margin-bottom: 1.25rem;
    padding: 0;
  }

  .wish-item {
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    font-size: 0.95rem;
    font-weight: 500;
    color: var(--navy);
    background: var(--blue-light);
    padding: 0.45rem 1rem 0.45rem 0.75rem;
    border-radius: 50px;
  }

  .wish-paw {
    flex-shrink: 0;
    opacity: 0.5;
  }

  .wish-link {
    display: inline-flex;
    align-items: center;
    gap: 0.35rem;
    font-family: var(--font-display);
    font-size: 0.95rem;
    font-weight: 700;
    color: var(--blue);
    border-bottom: 2px solid transparent;
    transition: border-color 0.2s;
    margin-bottom: 1rem;
  }

  .wish-link:hover {
    border-bottom-color: var(--blue);
  }

  .wish-note {
    font-size: 0.9rem;
    font-weight: 500;
    color: var(--navy);
    opacity: 0.5;
    font-style: italic;
  }

  @media (max-width: 580px) {
    .details-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
