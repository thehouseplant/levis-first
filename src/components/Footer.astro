---
interface Props {
  familyName?: string;
}

const { familyName = "The Family" } = Astro.props;
const year = new Date().getFullYear();
---

<footer class="site-footer">
  <div class="footer-decor" aria-hidden="true">
    <svg viewBox="0 0 1200 60" preserveAspectRatio="none" class="wave">
      <path d="M0,30 Q150,0 300,30 T600,30 T900,30 T1200,30 L1200,60 L0,60 Z" fill="var(--cream)" />
    </svg>
  </div>
  <div class="footer-content">
    <p class="footer-heart">Made with ❤️ by {familyName}</p>
    <p class="footer-copy">&copy; {year}</p>
  </div>
</footer>

<style>
  .site-footer {
    position: relative;
    background: var(--navy);
    text-align: center;
    padding: 3rem 1.5rem 2rem;
  }

  .footer-decor {
    position: absolute;
    top: -1px;
    left: 0;
    right: 0;
    line-height: 0;
  }

  .wave {
    width: 100%;
    height: 40px;
  }

  .footer-content {
    position: relative;
    z-index: 1;
  }

  .footer-heart {
    font-family: var(--font-display);
    font-size: 1.1rem;
    font-weight: 600;
    color: rgba(255, 255, 255, 0.85);
    margin-bottom: 0.3rem;
  }

  .footer-copy {
    font-size: 0.85rem;
    color: rgba(255, 255, 255, 0.4);
  }
</style>
