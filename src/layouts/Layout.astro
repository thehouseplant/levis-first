---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Come celebrate the first birthday party!" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Baloo+2:wght@400;500;600;700;800&family=Quicksand:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  *,
  *::before,
  *::after {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  :root {
    --blue: #2a7fff;
    --blue-dark: #1a5fd0;
    --blue-light: #e8f2ff;
    --green: #4ec24e;
    --green-dark: #3a9e3a;
    --red: #e84545;
    --orange: #ff8c42;
    --yellow: #ffd54f;
    --navy: #1a2744;
    --cream: #f0f7ff;
    --soft-white: #f8fbff;
    --paw-bg: rgba(42, 127, 255, 0.04);
    --font-display: 'Baloo 2', cursive;
    --font-body: 'Quicksand', sans-serif;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    font-family: var(--font-body);
    color: var(--navy);
    background: var(--cream);
    overflow-x: hidden;
    -webkit-font-smoothing: antialiased;
  }

  h1, h2, h3, h4 {
    font-family: var(--font-display);
  }

  a {
    color: var(--sky);
    text-decoration: none;
  }

  img {
    max-width: 100%;
    display: block;
  }
</style>
